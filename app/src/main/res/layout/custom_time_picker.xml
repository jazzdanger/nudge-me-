<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_access_time"
                android:tint="#FF2196F3"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time"
                android:textColor="@color/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:tint="@color/colorOnSurface"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginBottom="16dp" />

        <!-- All day toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_schedule"
                android:tint="#FFBDBDBD"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="All day"
                android:textColor="@color/colorOnSurface"
                android:textSize="16sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchAllDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:thumbTint="#FF2196F3"
                app:trackTint="#FF424242" />

        </LinearLayout>

        <!-- Today indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="@color/colorOnSurface"
                android:textSize="16sp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/txtCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:00 am"
                android:textColor="@color/colorSurface"
                android:textSize="14sp"
                android:background="@drawable/time_pill_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

        </LinearLayout>

        <!-- Time picker wheels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <NumberPicker
                android:id="@+id/hourPicker"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textColor="@color/colorOnSurface"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/colorOnSurface"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="8dp" />

            <NumberPicker
                android:id="@+id/minutePicker"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textColor="@color/colorOnSurface"
                android:textSize="24sp" />

            <NumberPicker
                android:id="@+id/ampmPicker"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:textColor="@color/colorOnSurface"
                android:textSize="24sp" />

        </LinearLayout>

        <!-- Quick selection buttons -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnOneHour"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:text="1 hour from now"
                android:textColor="@color/colorOnPrimary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:background="@drawable/quick_button_background" />

            <Button
                android:id="@+id/btnSevenAM"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:text="7:00 am"
                android:textColor="@color/colorOnPrimary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:background="@drawable/quick_button_background" />

            <Button
                android:id="@+id/btnThreePM"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:text="3:00 pm"
                android:textColor="@color/colorOnPrimary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:background="@drawable/quick_button_background" />

            <Button
                android:id="@+id/btnConfirmTime"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_columnWeight="1"
                android:text="Set time"
                android:textColor="@color/colorOnPrimary"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:background="@drawable/quick_button_background" />

        </GridLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
