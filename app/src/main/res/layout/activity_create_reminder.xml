<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".CreateReminderActivity">

    <!-- Top Bar with Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_purple_topbar"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Create New"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="16dp">

            <!-- Title Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter reminder title"
                android:inputType="text"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Date & Time Container (shown only when notifications enabled) -->
            <LinearLayout
                android:id="@+id/dateTimeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Date Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select date"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Time Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/editTextTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select time"
                    android:inputType="none"
                    android:focusable="false"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

            <!-- Notify Me Option -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notify me"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable notifications"
                android:textOn="On"
                android:textOff="Off"
                android:checked="false"
                app:thumbTint="@color/blue_500"
                app:trackTint="@color/gray_300"
                android:layout_marginBottom="16dp" />

            <!-- Notes Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter notes (optional)"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Repeat Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repeat"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select days of the week:"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:layout_marginBottom="12dp" />

            <!-- Days of the week selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Monday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Mon"
                    style="@style/Widget.Material3.Chip.Filter" />

                <!-- Tuesday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Tue"
                    style="@style/Widget.Material3.Chip.Filter" />

                <!-- Wednesday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Wed"
                    style="@style/Widget.Material3.Chip.Filter" />

                <!-- Thursday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipThursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Thu"
                    style="@style/Widget.Material3.Chip.Filter" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Friday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipFriday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Fri"
                    style="@style/Widget.Material3.Chip.Filter" />

                <!-- Saturday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSaturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Sat"
                    style="@style/Widget.Material3.Chip.Filter" />

                <!-- Sunday -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Sun"
                    style="@style/Widget.Material3.Chip.Filter" />

            </LinearLayout>

            <!-- Location-based Trigger -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location Trigger"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable location-based notification"
                android:checked="false"
                app:thumbTint="@color/blue_500"
                app:trackTint="@color/gray_300"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/locationPickerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">

                <!-- Location Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected Location:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <!-- Map Preview Container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/map_preview_background">

                    <!-- Map Fragment -->
                    <fragment
                        android:id="@+id/mapPreviewFragment"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Fullscreen Button -->
                    <ImageButton
                        android:id="@+id/buttonFullscreenMap"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_fullscreen_background"
                        android:contentDescription="Fullscreen map"
                        android:src="@drawable/ic_fullscreen"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                    <!-- Location Status Text -->
                    <TextView
                        android:id="@+id/textSelectedLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/location_text_background"
                        android:padding="8dp"
                        android:text="No location selected"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <!-- Current Location Button -->
                    <ImageButton
                        android:id="@+id/buttonCurrentLocation"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/button_location_background"
                        android:contentDescription="Use current location"
                        android:src="@drawable/ic_my_location"
                        android:scaleType="centerInside"
                        android:padding="12dp" />

                </RelativeLayout>

                <!-- Trigger Type Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trigger when:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radioGroupTriggerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <RadioButton
                        android:id="@+id/radioEnterLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entering location"
                        android:textSize="14sp"
                        android:checked="true"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/radioLeaveLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaving location"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/radioAtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="While at location"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp" />

                    <RadioButton
                        android:id="@+id/radioNotAtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="While not at location"
                        android:textSize="14sp" />

                </RadioGroup>

            </LinearLayout>

            <!-- Set Reminder Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSetReminder"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Set Reminder"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/blue_500"
                app:cornerRadius="12dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout> 